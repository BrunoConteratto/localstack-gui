<div class="page-title">
  <h3 class="breadcrumb-header">
    <i class="fab fa-bitbucket"></i> Buckets &nbsp;
    <a href="#">
      <i class="fad fa-xs btn-default fa-info-circle"></i>
    </a>
  </h3>
</div>
<div id="main-wrapper">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-white">
        <div class="panel-body">
          <button type="button" class="btn btn-success m-b-sm" data-toggle="modal" data-target="#modal-add-bucket">
            <i class="fad fa-plus"></i> Novo
          </button>
          <button type="button" class="btn btn-danger m-b-sm" onclick="deleteAllBuckets();">
            <i class="fad fa-trash"></i> Deletar Todos
          </button>
          <div class="table-responsive">
            <table id="table-buckets" class="display table row">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Data de criação</th>
                  <th>Opções</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="modal-add-bucket" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <form method="POST" accept="#" class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Novo Bucket</h4>
      </div>
      <div class="modal-body form-horizontal">
        <div class="form-group">
          <label for="input-placeholder" class="col-sm-2 control-label">Nome</label>
          <div class="col-sm-10">
            <div class="input-group">
              <input type="text" class="form-control" name="name" placeholder="Nome" required>
              <span class="input-group-addon">
                <div class="checker">
                  <i class="fad fa-lock"></i>
                  <span>
                    <input type="checkbox" name="locked" value="true">
                  </span>
                </div>
              </span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Região</label>
          <div class="col-sm-10">
            <select class="form-control" name="region">
              <option value="us-east-1" selected>us-east-1</option>
              <option value="us-east-2">us-east-2</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">ACL</label>
          <div class="col-sm-10">
            <select class="form-control" name="ACL">
              <option value="private">Privado</option>
              <option value="public-read" selected>Públuco - Leitura</option>
              <option value="public-read-write">Públuco - Leitura/Escrita</option>
              <option value="authenticated-read">Leitura autenticada</option>
            </select>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <i class="fad fa-times" aria-hidden="true"></i> Sair
        </button>
        <button type="submit" id="add-row" class="btn btn-success">
          <i class="fad fa-check" aria-hidden="true"></i> Criar
        </button>
      </div>
    </form>
  </div>
</div>

<div id="modal-bucket-config" class="modal fade" tabindex="-1" role="dialog" style="display: none;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Bucket</h4>
      </div>
      <form class="modal-body">
        <div class="form-group row">
          <div class="col-sm-10">
            <select class="form-control" name="func"></select>
          </div>
          <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">
              <i class="fad fa-wrench"></i>
            </button>
          </div>
        </div>
        <div class="form-group row">
          <pre></pre>
        </div>
      </form>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>

<div id="modal-tree" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">×</span></button>
        <h4 class="modal-title">Arquivos</h4>
      </div>
      <div class="modal-body">

        <div class="panel panel-white">
          <div class="panel-body">
            <div id="dragTree">
              <ul>
                <li>Root node
                  <ul>
                    <li data-jstree='{"icon":"fa fa-warning icon-state-danger icon-md"}'>Custom icon</li>
                    <li data-jstree='{"type":"file"}'>Child node</li>
                  </ul>
                </li>
                <li>Root node
                  <ul>
                    <li data-jstree='{"opened":true}'>Root node
                      <ul>
                        <li data-jstree='{"type":"file"}'>Child node</li>
                        <li data-jstree='{"opened":true}'>Opened
                          <ul>
                            <li data-jstree='{"selected":true,"type":"file"}'>Selected</li>
                            <li data-jstree='{"type":"file"}'>Child node</li>
                          </ul>
                        </li>
                      </ul>
                    </li>
                    <li data-jstree='{"opened":true}'>Opened
                      <ul>
                        <li data-jstree='{"type":"file"}'>File type</li>
                        <li data-jstree='{"type":"file"}'>File type</li>
                      </ul>
                    </li>
                    <li data-jstree='{"icon":"fa fa-tags icon-state-danger icon-md"}'>Custom icon</li>
                  </ul>
                </li>
                <li data-jstree='{"type":"file"}'>File type</li>
              </ul>
            </div>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <i class="fa fa-close" aria-hidden="true"></i> Voltar
        </button>
      </div>
    </div>
  </div>
</div>
