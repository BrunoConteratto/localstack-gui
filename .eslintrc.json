{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "ignorePatterns": ["assets/*", "node_modules/*", "logs/*", "project/*", "src/renderer.js"],
  "rules": {
    "no-console": "off",
    "class-methods-use-this"
  }
}
